BREWINSTALLED=`which brew`


###################################
# HOMEBREW INSTALL                #
###################################

if [[ ${BREWINSTALLED} == "" ]]; then
  echo "Installing Brew"
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

  source ~/.zshrc 
fi
brew tap homebrew/cask
brew update


